
@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>

    @if (TempData["LoiAccount"] != null)
    {
        <script type="text/javascript" charset="utf-8">
            alert('@Html.Raw(TempData["LoiAccount"])');
        </script>
    }
    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="~/images/logo.png" />
                    </a>
                </div>

                <span class="logout-spn">
                    <a href="~/TMDT/Logout" style="color:#fff;">LOGOUT</a>
                </span>
            </div>
        </div>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li>
                        <a href="~/TMDT/Dashboard"><i class="fa fa-edit "></i>Dashboard  <span class="badge">Included</span></a>
                    </li>
                </ul>
                <ul class="nav" id="main-menu">
                    <li class="active-link">
                        <a href="~/TMDT/AccountManager"><i class="fa fa-edit "></i>Manage-Account  <span class="badge">Included</span></a>
                    </li>
                </ul>
                <ul class="nav" id="main-menu">
                    <li>
                        <a href="~/TMDT/ManageProduct"><i class="fa fa-edit "></i>Manage-Product  <span class="badge">Included</span></a>
                    </li>
                </ul>
                <ul class="nav" id="main-menu">
                    <li>
                        <a href="~/TMDT/TypeProductManager"><i class="fa fa-edit "></i>Manage-TypeProduct  <span class="badge">Included</span></a>
                    </li>
                </ul>
            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>UPDATE ACCOUNT </h2>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />
                <div>
                    <form method="post" action="~/TMDT/UpdateAccount" enctype="multipart/form-data">
                        <input type="hidden" name="makh" value="@ViewBag.Account.makh"/>
                        Họ:
                        </br>
                        <input type="text" name="ho" required value="@ViewBag.Account.ho" />
                        </br>
                        Tên:
                        </br>
                        <input type="text" name="ten" required value="@ViewBag.Account.ten" />
                        </br>
                        Địa chỉ:
                        </br>
                        <input type="text" name="diachi" required value="@ViewBag.Account.diachi" />
                        </br>
                        Số điện thoại:
                        </br>
                        <input type="number" name="sdt" required value="@ViewBag.Account.sdt" />
                        </br>
                        Email:
                        </br>
                        <input type="email" name="email" required value="@ViewBag.Account.email" />
                        </br>
                        Mật khẩu:
                        </br>
                        <input type="password" name="matkhau" required value="@ViewBag.Account.matkhau" />
                        </br>
                        Nhập lại mật khẩu:
                        </br>
                        <input type="password" name="nhaplaimatkhau" required value="@ViewBag.Account.nhaplaimatkhau" />
                        </br>
                        Quyền:
                        </br>
                        <select name="quyen">
                            @if (ViewBag.Account.quyen == "Admin")
                            {
                                <option>User</option>
                                <option>Admin</option>}

                            else
                            {
                                <option>Admin</option>
                                <option>User</option>}
                        </select>
                        <input type="submit" value="Insert" style="color:white;margin-top:10px;background-color:red;border:none;border-radius:5px;height:30px;width:70px" />
                    </form>
                </div>
                <!-- /. ROW  -->
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <div class="footer">


        <div class="row">
            <div class="col-lg-12">
                &copy;  2014 yourdomain.com | Design by: <a href="http://binarytheme.com" style="color:#fff;" target="_blank">www.binarytheme.com</a>
            </div>
        </div>
    </div>


    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/js/custom.js"></script>


</body>
</html>

