
@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
                                <table summary="This table shows how to create responsive tables using Bootstrap's default functionality" class="table table-bordered table-hover" style="width:700px" id="tabletim">
                                    <thead>
                                        <tr>
                                            <th><input type="button" value="Thêm" style="color:white;margin-top:10px;background-color:red;border:none;border-radius:5px;height:30px;width:50px" onclick="location.href='/TMDT/InsertAccount'" /></th>
                                        </tr>
                                        <tr>
                                            <th>Mã KH</th>
                                            <th>Họ</th>
                                            <th>Tên</th>
                                            <th>Địa chỉ</th>
                                            <th>Sđt</th>
                                            <th>Email</th>
                                            <th>Quyền</th>
                                            <th colspan="2">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var find in ViewBag.Find)
                                        {
                                            <tr>
                                                <td>@find.makh</td>
                                                <td>@find.ho</td>
                                                <td>@find.ten</td>
                                                <td>@find.diachi</td>
                                                <td>@find.sdt</td>
                                                <td>@find.email</td>
                                                <td>@find.quyen</td>
                                                <td><input type="button" value="Sửa" style="color:white;margin-top:10px;background-color:green;border:none;border-radius:5px;height:30px;width:50px" onclick="location.href='/TMDT/UpdateAccount?keyword=@find.makh'" /></td>
                                                <td><input type="button" value="Xóa" style="color:white;margin-top:10px;background-color:yellow;border:none;border-radius:5px;height:30px;width:50px" onclick="location.href='/TMDT/DeleteAccount?keyword=@find.makh'" /></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                           


</body>
</html>

