
@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function()
    {
        $("#btsuahinh").click(function () {
            $("#divsuahinh").html('<input type="hidden" name="hinh" value="@ViewBag.Product.hinh"/><input type="file" name="myfile"/>');
        });
       });
    </script>

    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="~/images/logo.png" />
                    </a>
                </div>

                <span class="logout-spn">
                    <a href="~/TMDT/Logout" style="color:#fff;">LOGOUT</a>
                </span>
            </div>
        </div>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <div class="sidebar-collapse">
                    <ul class="nav" id="main-menu">
                        <li>
                            <a href="~/TMDT/Dashboard"><i class="fa fa-edit "></i>Dashboard  <span class="badge">Included</span></a>
                        </li>
                    </ul>
                    <ul class="nav" id="main-menu">
                        <li>
                            <a href="~/TMDT/AccountManager"><i class="fa fa-edit "></i>Manage-Account  <span class="badge">Included</span></a>
                        </li>
                    </ul>
                    <ul class="nav" id="main-menu">
                        <li class="active-link">
                            <a href="~/TMDT/ManageProduct"><i class="fa fa-edit "></i>Manage-Product  <span class="badge">Included</span></a>
                        </li>
                    </ul>
                    <ul class="nav" id="main-menu">
                        <li>
                            <a href="~/TMDT/TypeProductManager"><i class="fa fa-edit "></i>Manage-TypeProduct  <span class="badge">Included</span></a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>UPDATE PRODUCT </h2>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />
                <div>
                    <form method="post" action="~/TMDT/UpdateProduct">
                        <input type="hidden" name="masanpham" value="@ViewBag.Product.masanpham" />
                        Loại:
                        </br>
                        <select name="matl">
                            <option value="@ViewBag.Product.matl">@ViewBag.TypeUpdate.tentheloai</option>
                            @foreach (var listtype in ViewBag.Type)
                            {
                                <option value="@listtype.matl">@listtype.tentheloai</option>
                            }
                        </select>
                        </br>
                        Tên sản phẩm:
                        </br>
                        <input type="text" name="tensanpham" value="@ViewBag.Product.tensanpham" />
                        </br>
                        Giá:
                        </br>
                        <input type="number" step=".1" name="gia" value="@ViewBag.Product.gia" />
                        </br>
                        Hình sản phẩm:
                        </br>
                        <div id="divsuahinh">
                            <img src="~/UploadFiles/@ViewBag.Product.hinh" style="width:300px;height:300px" />
                            </br>
                            <button style="margin-left:200px" id="btsuahinh">Sửa hình</button>
                            <input type="hidden" name="hinh" value="@ViewBag.Product.hinh" />
                        </div>
                        </br>
                        <input type="submit" value="Update" style="color:white;margin-top:10px;background-color:red;border:none;border-radius:5px;height:30px;width:70px" />
                    </form>
                </div>
                <!-- /. ROW  -->
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <div class="footer">


        <div class="row">
            <div class="col-lg-12">
                &copy;  2014 yourdomain.com | Design by: <a href="http://binarytheme.com" style="color:#fff;" target="_blank">www.binarytheme.com</a>
            </div>
        </div>
    </div>


    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/js/custom.js"></script>


</body>
</html>

